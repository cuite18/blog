{% extends "base.html.twig" %}

{% block title %}
    Connexion
{% endblock %}

{% block body %}

    <h1 class="display-4 text-center my-5">Connexion</h1>

    {% for message in app.flashes('success') %}

        <div class="col-md-5 bg-success p-4 rounded mx-auto text-center text-white mb-3">
            {{ message }}
        </div>

    {% endfor %}

    {% if error %}

        <div class="col-md-5 bg-warning p-4 rounded mx-auto text-center text-white mb-3">
            {{ error.messagekey|trans(error.messageData, 'security') }}
            {# trans(error.messageData, 'security') : permet de pointer sur le fichier 'translations/security.en.php' qui contient la personnalisation des messages utilisateurs par d√©faut de Symfony #}
        </div> 

    {% endif %}

    <form method="post" class="col-md-5 mx-auto" action="{{ path('security_login') }}">
        <div class="form-group">
            <label for="_username">Email</label>
            <input type="text" class="form-control" id="_username" name="_username" value="{{ lastUsername }}">
        </div>
        <div class="form-group">
            <label for="_password">Password</label>
            <input type="password" class="form-control" id="_password" name="_password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

{% endblock %}